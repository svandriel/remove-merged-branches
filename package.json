{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "description": "A strict but unassuming Typescript + Node.JS boilerplate project",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "test": "jest",
    "dev": "nodemon -d 0.2 src/index.ts",
    "start": "node dist/index.js",
    "verify": "npm run test && npm run lint && npm run clean && npm run build",
    "lint": "eslint \"**/*.{ts,graphql,json}\"",
    "fix": "eslint \"**/*.{ts,graphql,json}\" --fix",
    "version": "npm run verify",
    "prepublishOnly": "npm run verify"
  },
  "keywords": [
    "typescript",
    "node",
    "boilerplate"
  ],
  "author": "Sander van Driel <anonymous@example.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^4.3.8",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "lint-staged": {
    "**/*.{ts,graphql,json}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": "^10||^12||^14||^15"
  }
}
