{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "description": "A strict but unassuming Typescript + Node.JS boilerplate project",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist coverage",
    "test": "jest",
    "dev": "nodemon -d 0.2 src/index.ts",
    "start": "node dist/index.js",
    "verify": "npm run test && npm run lint && npm run clean && npm run build",
    "lint": "eslint \"**/*.{ts,graphql,json}\"",
    "fix": "eslint \"**/*.{ts,graphql,json}\" --fix",
    "version": "npm run verify",
    "prepublishOnly": "npm run verify",
    "prepare": "husky install"
  },
  "keywords": [
    "typescript",
    "node",
    "boilerplate"
  ],
  "author": "Sander van Driel <anonymous@example.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.{ts,graphql,json}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": "^10||>=12"
  }
}
